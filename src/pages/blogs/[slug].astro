---
import { type CollectionEntry, getCollection, render } from 'astro:content'
import PostLayout from '@/layouts/PostLayout.astro'

export async function getStaticPaths() {
  const blogs = await getCollection('blogs')
  return blogs
    .filter((b) => !b.id.startsWith('_'))
    .map((b) => ({ params: { slug: b.id }, props: b }))
}

type Props = CollectionEntry<'blogs'>

const blog = Astro.props
const { Content, remarkPluginFrontmatter } = await render(blog)

const readingTime = remarkPluginFrontmatter.readingTime
const toc = remarkPluginFrontmatter.toc || []
---

<PostLayout {...blog.data} readingTime={readingTime} toc={toc}>
  <Content />
</PostLayout>
