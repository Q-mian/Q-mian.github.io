---
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

const posts = await getCollection('posts')
---

<section class="prose">
  <h1>Blog</h1>
  <ul>
    {posts.map((p) => (
      <li key={p.id}>
        <a href={`/blog/${p.id}/`}>{p.data.title}</a>
      </li>
    ))}
  </ul>
</section>
